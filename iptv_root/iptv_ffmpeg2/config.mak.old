PREFIX=/usr/local
prefix=$(DESTDIR)${PREFIX}
libdir=$(DESTDIR)${PREFIX}/lib
shlibdir=$(DESTDIR)${PREFIX}/bin
incdir=$(DESTDIR)${PREFIX}/include/ffmpeg
bindir=$(DESTDIR)${PREFIX}/bin
mandir=$(DESTDIR)${PREFIX}/man
MAKE=make
CC=gcc
AR=ar
RANLIB=ranlib
STRIP=strip
OPTFLAGS= -fomit-frame-pointer -fno-strict-aliasing -g -Wdeclaration-after-statement -Wall -Wno-switch -Wdisabled-optimization -Wpointer-arith -Wredundant-decls -O3 -I/usr/local/include
VHOOKCFLAGS=-fPIC -fomit-frame-pointer -fno-strict-aliasing -g -Wdeclaration-after-statement -Wall -Wno-switch -Wdisabled-optimization -Wpointer-arith -Wredundant-decls -O3
LDFLAGS=-Wl,--warn-common -Wl,-rpath-link,$(BUILD_ROOT)/libavcodec -Wl,-rpath-link,$(BUILD_ROOT)/libavformat -Wl,-rpath-link,$(BUILD_ROOT)/libavutil
LDCONFIG=ldconfig
FFSERVERLDFLAGS=-Wl,-E
SHFLAGS=-shared
VHOOKSHFLAGS=-shared -L$(BUILD_ROOT)/libavformat -L$(BUILD_ROOT)/libavcodec -L$(BUILD_ROOT)/libswscale -L$(BUILD_ROOT)/libavutil
VHOOKLIBS=-lavformat$(BUILDSUF) -lavcodec$(BUILDSUF) -lswscale$(BUILDSUF) -lavutil$(BUILDSUF) $(EXTRALIBS)
LIBOBJFLAGS=
BUILD_STATIC=no
BUILDSUF=
LIBPREF=lib
LIBSUF=${BUILDSUF}.a
LIB=
SLIBPREF=lib
SLIBSUF=${BUILDSUF}.so
EXESUF=${BUILDSUF}
TARGET_ARCH_X86_32=yes
TARGET_ARCH_X86=yes
BUILD_SHARED=yes
PIC=-fPIC -DPIC
SPPMAJOR=51
SPPVERSION=51.1.0
LAVCMAJOR=51
LAVCVERSION=51.35.0
LAVFMAJOR=51
LAVFVERSION=51.10.0
LAVUMAJOR=49
LAVUVERSION=49.3.0
SWSMAJOR=0
SWSVERSION=0.5.0
SLIBNAME=$(SLIBPREF)$(NAME)$(SLIBSUF)
SLIBNAME_WITH_VERSION=$(SLIBPREF)$(NAME)-$(LIBVERSION)$(SLIBSUF)
SLIBNAME_WITH_MAJOR=$(SLIBPREF)$(NAME)-$(LIBMAJOR)$(SLIBSUF)
SLIB_EXTRA_CMD=
SLIB_INSTALL_EXTRA_CMD=-install -m 644 $(SLIBNAME_WITH_MAJOR:$(SLIBSUF)=.lib) "$(shlibdir)/$(SLIBNAME_WITH_MAJOR:$(SLIBSUF)=.lib)"
LIB_INSTALL_EXTRA_CMD=$(RANLIB) "$(libdir)/$(LIB)"

